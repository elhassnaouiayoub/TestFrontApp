<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CrossBrowser">
    <listeners>
        <listener class-name="com.AppMovies.utility.ListenerClass"></listener>
    </listeners>
    <test verbose="2" preserve-order="true" name="ChromeBrowser">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.AppMovies.testcases.RegisterPageTest"/>
            <class name="com.AppMovies.testcases.MyProfilePageTest"/>
            <class name="com.AppMovies.testcases.LoginPageTest"/>
            <class name="com.AppMovies.testcases.MoviesPageTest"/>
            <class name="com.AppMovies.testcases.MovieDetailsPageTest"/>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="FireFoxBrowser">
        <parameter name="browser" value="FireFox"></parameter>
        <classes>
            <class name="com.AppMovies.testcases.RegisterPageTest"/>
            <class name="com.AppMovies.testcases.MyProfilePageTest"/>
            <class name="com.AppMovies.testcases.LoginPageTest"/>
            <class name="com.AppMovies.testcases.MoviesPageTest"/>
            <class name="com.AppMovies.testcases.MovieDetailsPageTest"/>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="EdgeBrowser">
        <parameter name="browser" value="Edge"></parameter>
        <classes>
            <class name="com.AppMovies.testcases.RegisterPageTest"/>
            <class name="com.AppMovies.testcases.MyProfilePageTest"/>
            <class name="com.AppMovies.testcases.LoginPageTest"/>
            <class name="com.AppMovies.testcases.MoviesPageTest"/>
            <class name="com.AppMovies.testcases.MovieDetailsPageTest"/>
        </classes>
    </test>

</suite>